<!DOCTYPE html>
<html lang="en">

<!-- import head -->
<%- include('../partials/head.ejs') %>

<body>

    <!-- import header -->
    <%- include('../partials/header.ejs') %>

    <nav>
        <a href="/pokemon/new"><button>Add a Pokemon</button></a>
    </nav>

    <main>
        <div class="pokemon-info">
            <!-- render pokemon -->
            <h2> <%= pokemon.name %> </h2>

            <img alt="a photo of <%= pokemon.name %>" src="<%= pokemon.img %>" />

            <ul>
                <% for (type of types) { %>
                    <li>
                        <%= type %>
                    </li>
                <% } %>
            </ul>

            <div class="stats">
                <h3>stats</h3>
                hp: <%= stats.hp %> <br>
                attack: <%= stats.attack %> <br>
                defense: <%= stats.defense %> <br>
                sp. atk: <%= stats.spattack %> <br>
                sp. def: <%= stats.spdefense %> <br>
                speed: <%= stats.speed %>
            </div>

            <a href="/pokemon"><button>Back to Pokemon</button></a>

            <br>

            <a href="/pokemon/<%= pokemon.id %>/edit"><button>Edit Pokemon</button></a>

            <form action="/pokemon/<%= pokemon.id %>?_method=DELETE" method="POST">
                <input type="submit" value="Delete Pokemon">
            </form>

        </div>

    </main>

</body>
</html>